{
  "name": "animestream-addon",
  "version": "1.0.0",
  "description": "Stremio Addon - Comprehensive Anime Catalog with 40,000+ titles from anime-offline-database",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build-db": "node scripts/build-database-v4.js",
    "build-db:test": "node scripts/build-database-v4.js --test",
    "incremental-update": "node scripts/incremental-update.js",
    "incremental-update:dry": "node scripts/incremental-update.js --dry-run",
    "incremental-update:qc": "node scripts/incremental-update.js --quality-control",
    "incremental-update:new": "node scripts/incremental-update.js --new-anime",
    "bulk-enrich": "node scripts/bulk-enrich-database.js",
    "bulk-enrich:dry": "node scripts/bulk-enrich-database.js --dry-run",
    "bulk-enrich:missing": "node scripts/bulk-enrich-database.js --missing-only",
    "update-filters": "node scripts/update-filter-options.js"
  },
  "keywords": [
    "stremio",
    "addon",
    "anime",
    "myanimelist",
    "kitsu",
    "anilist",
    "catalog",
    "anime-offline-database"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "node-fetch": "^2.7.0",
    "lru-cache": "^10.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
